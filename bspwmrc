//---------------------------------------------------------------------------
float Pot(float x, byte n){
	float p;
	if ((x==0)&&(n==0)) {  //precondicion
		throw new Exception("[!] Error:indeterminado");
	}else {
		if (n==0) {
			p = 1;
		}else{
			p = Pot(x,n-1)*x;
		}
		return p;
	}
}

void __fastcall TForm1::Button2Click(TObject *Sender)
{
	Edit3->Text=Pot(StrToFloat(Edit1->Text),StrToInt(Edit2->Text));
}
//---------------------------------------------------------------------------
//def. recurrente  o iterativas
//axioma de orden
//

byte SumaDig(Cardinal x){
	byte s;
	if (x<10) {
		s=x;
	}else{
		s=SumaDig(x/10) + x%10;
	}
	return s;
}

void __fastcall TForm1::Button3Click(TObject *Sender)
{
	Edit3->Text=SumaDig(StrToInt(Edit1->Text));
}
//---------------------------------------------------------------------------
 //operador ternario
byte SumaDigitosPares( Cardinal x ) {
  byte sum;
  if ( x < 10 ) {
    if ( x % 2 == 0 )
      sum = x;
	else
	  sum = 0;
  }
  else {
	sum = SumaDigitosPares( x / 10 );
	if ( ( ( x % 10 ) % 2 ) == 0 )
      sum = sum + ( x % 10 );
  }
  return ( sum );
}
void __fastcall TForm1::Button4Click(TObject *Sender)
{
	Edit3->Text=SumaDigitosPares(StrToInt(Edit1->Text));
}
//---------------------------------------------------------------------------
//funcion de numeros impares
byte SumImpar(Cardinal x){
  byte sum;
  if ( x < 10 ) {
	if ( x % 2 == 1 )
	  sum = x;
	else
	  sum = 0;
  }
  else {
	sum = SumaDigitosPares( x / 10 );
	if ( ( ( x % 10 ) % 2 ) == 1 )
      sum = sum + ( x % 10 );
  }
  return ( sum );
}

void __fastcall TForm1::Button5Click(TObject *Sender)
{
	Edit3->Text=SumImpar(StrToInt(Edit1->Text));
}
//---------------------------------------------------------------------------
bool Ordenado(Cardinal x){
	//bool esta;
	/*if (x<10) {
		esta= true;
	}else{
		esta = Ordenado(x/10) && (x/10%10 <= x%10);
	}
	return esta;  */
	return  x<10?x:Ordenado(x/10) && (x/10%10 <= x%10);     //operador ternario
}
void __fastcall TForm1::Button6Click(TObject *Sender)
{
	if (Ordenado(StrToInt(Edit1->Text))) {
		Edit3->Text="si esta ordenado";
	}else{
		Edit3->Text="no esta ordenado";
	}
}
//---------------------------------------------------------------------------
void MoverMayor(Cardinal &x){
	if (x>=10) {
		byte z = x % 10;
		x = x / 10;
		MoverMayor(x);
		if (z >= x % 10) {
			x = x * 10 + z;
		}else{
			x=(x / 10 * 10 + z) * 10 + x % 10;
		}
	}
}
void __fastcall TForm1::Button7Click(TObject *Sender)
{
	Cardinal z = StrToInt(Edit1->Text);
	MoverMayor(z);
	Edit1->Text=z;
}
//---------------------------------------------------------------------------
void ordenar(Cardinal &x){
	if (x>=10) {  //caso general
		MoverMayor(x);
		byte z = x % 10;
		x = x / 10;
		ordenar(x);
		x= x * 10 + z;
	}
}

void __fastcall TForm1::Button8Click(TObject *Sender)
{   Cardinal z=StrToInt(Edit1->Text);
	ordenar(z);
	Edit3->Text=z;
}
//---------------------------------------------------------------------------
//conjuntos
//logica de predicados
//principio de inducion complta
//

AnsiString Inverso(AnsiString x){
	AnsiString y;
	if (x=="") {
		y="";
	}else{
		char z = x[1];
		x.Delete(1,1);
		y=Inverso(x)+z;
	}


	return y;
}

void __fastcall TForm1::Button9Click(TObject *Sender){
	Edit3->Text=Inverso(Edit1->Text);
}
//---------------------------------------------------------------------------
AnsiString Inverso2(AnsiString x){
	AnsiString y;
	if (x=="") {
		y="";
	}else{
		AnsiString z = x[x.Length()];    //pasamos de chat a ansistring
		x.Delete(x.Length(),1);
		y = z + Inverso2(x);    //z debe ser una cadena
	}
	return y;
}

void __fastcall TForm1::Button10Click(TObject *Sender)
{
	Edit3->Text=Inverso(Edit1->Text);
}
//---------------------------------------------------------------------------
AnsiString Inverso3(AnsiString x){
	AnsiString y;
	if (x=="") {
		y="";
	}else if (x.Length()==1) {  //segundo caso base
		y = x;
	}
	else{
		AnsiString z = x.SubString(1,2);
		x.Delete(1,2);
		y = Inverso3(x) + z[2] + z[1];    //z debe ser una cadena
	}
	return y;
}
void __fastcall TForm1::Button11Click(TObject *Sender)
{
	Edit3->Text=Inverso3(Edit1->Text);
}
//---------------------------------------------------------------------------
//inverso4 ,menos los dos ultimos
AnsiString Inverso4(AnsiString x){
	AnsiString y; char z1,z2;
	if (x=="") {
		y="";
	}else if (x.Length()==1) {  //segundo caso base
		y = x;
	}
	else{
		z1 = x[1]; z2=x[x.Length()];

		x.Delete(x.Length(),1); x.Delete(1,1);
		y=AnsiString(z2) + Inverso4(x) + z1;     //convertimos z2 a AnsiString
	}
	return y;
}
void __fastcall TForm1::Button12Click(TObject *Sender)
{

	Edit3->Text=Inverso4(Edit1->Text);
}
//---------------------------------------------------------------------------
bool EsVocal(char z){
	AnsiString vocales= "aeiouAEIOU";
	return vocales.Pos(z)>0;
}
void EliVocal(AnsiString &x){
	if (x.Length()>0) { //caso base
		AnsiString z = x[1];
		x.Delete(1,1);
		EliVocal(x);
		if (!EsVocal(z[1])) {
			x = z + x;
		}
	}
}
void __fastcall TForm1::Button13Click(TObject *Sender)
{   AnsiString z=Edit1->Text;
	EliVocal(z);
	Edit3->Text=z;
}
