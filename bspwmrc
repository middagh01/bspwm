void __fastcall TForm4::Button1Click(TObject *Sender)
{
Edit1->Text="0";
Edit2->Text="";
Edit3->Text="";
Edit4->Text="1";
Edit5->Text="1";
Edit6->Text="2000";
}
//---------------------------------------------------------------------------
void __fastcall TForm4::FormCreate(TObject *Sender)
{  ruta="C:\\Users\\Usuario G\\Desktop\\INF210\\Datos\\";
	nom="Alumnos.dat";
	AnsiString nomArch=ruta+nom;
	fstream f(nomArch.c_str(),ios::binary|ios::in);  //lectura
	 if (f.fail()) {
	   f.open(nomArch.c_str(),ios::binary|ios::out); //se crea el archivo
	 }
	 f.close();
}
//---------------------------------------------------------------------------
void __fastcall TForm4::Button2Click(TObject *Sender)
{ RegAlumno reg; AnsiString nomArch=ruta+nom;
  AnsiString aux;
  reg.cod = StrToInt(Edit1->Text);
  aux=Edit2->Text;
  strcpy(reg.nom,aux.c_str());
  aux=Edit3->Text;
  strcpy(reg.dir,aux.c_str());
  reg.fecha.dia=StrToInt(Edit4->Text);
  reg.fecha.mes=StrToInt(Edit5->Text);
  reg.fecha.aÃ±o=StrToInt(Edit6->Text);

  fstream f(nomArch.c_str(),ios::binary|ios::app);
  f.write((char*)&reg,sizeof(reg));//ahora guarda  todo completo por "sizeof"
  f.close();
  Button1Click(Sender);//limpiar pantalla
  ShowMessage("Datos guardados");

}
